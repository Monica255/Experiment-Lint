#!/bin/bash

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Get git root directory
GIT_ROOT=$(git rev-parse --show-toplevel)

# Make scripts executable
chmod +x $GIT_ROOT/script/format-staged.sh
chmod +x $GIT_ROOT/script/analyze-staged.sh

echo -e "${YELLOW}Running format check...${NC}"
$GIT_ROOT/script/format-staged.sh
echo

echo -e "${YELLOW}Running code analysis...${NC}"
$GIT_ROOT/script/analyze-staged.sh
ANALYZE_STATUS=$?

if [ $ANALYZE_STATUS -ne 0 ]; then
    echo -e "${RED}Analysis failed!${NC}"
    echo -e "${YELLOW}Do you want to commit anyway? [y/N]${NC}"
    read -r response

    if [[ "$response" =~ ^[Yy]$ ]]; then
        echo -e "${YELLOW}Proceeding with commit despite analysis failure...${NC}"
        exit 0
    else
        echo -e "${RED}Commit aborted.${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}All checks passed!${NC}"
exit 0